pipeline {

    agent any

    environment {
		DOCKER_IMAGE = 'smart-expense-tracker-app:lts'
		MINIKUBE_PATH = '/usr/local/bin/minikube'
    }

    stages {

        stage('Checkout Code') {

            steps {

                git branch: 'master', url: 'https://github.com/ClueBlue/presentation-app'

            }

        }
	stage('Preparation') {

		steps {

			catchError(buildResult: 'SUCCESS') {

				sh 'docker stop smart-expense-tracker'

				sh 'docker rm smart-expense-tracker'
			}
		}
	}

	stage('Build Docker Image in Minikube') {
            steps {
                script {
		    sh '$MINIKUBE_PATH start --driver=docker'
                    sh 'eval $(minikube docker-env)'
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                script {
                    sh 'ansible-playbook -i ansible/inventory.ini ansible/deploy.yaml'
                }
            }
        }
    }
}

